

<h1>Listing posts</h1>
<p>
<%= link_to 'New post', new_post_path, :class => 'btn btn-success btn-sm' %><br>
</p>



  <% @posts.each do |post| %>
      <div>

        <strong><%= post.title.slice(0,15) %></strong><br>
        <p><%= post.text.slice(0,15) %></p>
        <p>
          <span class="badge"><%= post.comments.size %> </span> comments
        </p>
        <div class="btn-group">

        <%= link_to 'Show', post_path(post), :class => 'btn btn-primary btn-sm' %>
        <%= link_to 'Edit', edit_post_path(post), :class => 'btn btn-warning btn-sm' %>
        <%= link_to 'Destroy', post_path(post), method: :delete, data: { confirm: 'Are you sure?'}, :class => 'btn btn-danger btn-sm' %>
        </div>

      </div><br>


  <% end %>
