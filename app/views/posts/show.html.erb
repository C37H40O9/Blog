<div class="panel panel-info">
  <div class="panel-heading">
    <h2 class="panel-title"><%= @post.title %></h2>
  </div>
  <div class="panel-body">
    <table width="50%">
      <tr>
        <td>
          <p>

            Тэги: <%= raw @post.tag_list.map { |t| link_to t, tag_path(t) }.join(', ') %></p>
        </td>
      </tr>
      <tr>
        <td>


      <%= link_to image_tag(@post.photo.url(:medium), :align => "left"), @post.photo.url(:original), :target => "_blank" %>


        </td>
      </tr>
    <tr>
      <td>
        <p>
    <%= @post.text %>
        </p>
      </td>

      </tr>
    </table>
  </div>
</div>
<%= link_to 'Edit', edit_post_path(@post), :class => 'btn btn-warning btn-sm'  if current_admin!=nil %>



<h2>Comments:</h2>
<%= render @post.comments %>

<h2>Add a comment:</h2>
<%= render 'comments/form' %>


