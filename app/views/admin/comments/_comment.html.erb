<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">Commenter: <%= comment.commenter %></h3>
  </div>
  <div class="panel-body">
    <%= comment.body %>
  </div>
</div>




<p>
  <%= link_to 'Destroy Comment', [comment.post, comment],
              method: :delete,
              data: {confirm: 'Are you sure?'}, :class => 'btn btn-danger btn-sm' if admin?  %>
</p>