<div class="panel panel-info" style="width: 750px">
  <div class="panel-heading">
    <h2 class="panel-title"><%= @post.title %></h2>
  </div>
  <div class="panel-body">
    <div style="display: table; width: 700px; margin-left: 10px; margin-right: 10px">
      <h3><%= @post.title %></h3>
      <div style="margin-bottom: 15px">
        Тэги: <%= raw @post.tag_list.map { |t| link_to t, tag_path(t) }.join(', ') %>
      </div>
      <div style="float: left">
        <%= link_to image_tag(@post.photo.url(:medium), :align => "left"), @post.photo.url(:original), :target => "_blank" %>
      </div>
      <div style="-moz-column-count: 2; text-align: justify; clear: both; margin-top: 15px">
        <%= @post.text %>
      </div>
      <div>
        <h2>Comments:</h2>
        <%= render @post.comments %>

        <h2>Add a comment:</h2>
        <%= render 'comments/form' %>
      </div>
    </div>
  </div>
</div>
<%= link_to 'Редактировать', edit_admin_post_path(@post), :class => 'btn btn-warning btn-sm'%>



