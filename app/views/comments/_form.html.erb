<%= form_for([@post, @post.comments.build]) do |f| %>
    <p>
      <%= f.label :commenter %><br>
      <%= f.text_field :commenter %>
    </p>
    <p>
      <%= f.label :body %><br>
      <%= f.text_area :body %>
    </p>
      <%= link_to 'Back', posts_path, :class => 'btn btn-default' %>
      <%= f.submit %>



<% end %>